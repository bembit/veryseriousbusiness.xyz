            -webkit-user-select: none; */
            h1 {
                /* display: none; */
                font-size: 1.6rem;
                margin-left: 10px;
                text-decoration: none;
                transform: translateY(-5px);
            }
            div {
                position: absolute;
                top: 45%;
                left: 20%;
                font-size: 1rem;
                transform: translateY(-5px);
            }
            div p:first-of-type {
                transform: translateX(10px);
            }
            span:first-of-type {
                font-size: 1.4rem;
                transform: rotate(5deg);
            }
            span:last-of-type {
                font-size: 1.6rem;
                transform: rotate(-5deg);
            }
    }

    @media (max-width: 768px) {
        header {
            flex-direction: column;
        }
        #mobile-nav-toggle {
            display: block;
        }
    }

