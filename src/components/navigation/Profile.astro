<style>
    .profile {
        background-color: #00000008;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-top: 10%;
        width: 70%;
    }

    .profile div:first-of-type {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .profile h2 {
        margin-top: .5rem;
        /* background-color: #0000000a; */
        text-align: center;
        min-width: 175px;
        color: var(--text-secondary);
    }

    .profile p {
        display: inline-block;
        background-color: #0000000a;
        text-align: left;
        color: var(--text-primary);
        font-size: 1.25rem;
        font-weight: 700;
        /* width: 175px; */
        width: 90%;
        padding: 1rem 1rem;
        border-top: 2px solid var(--text-primary);
    }

    .profile p > a {
        color: var(--text-secondary);
        text-decoration: underline;
        font-weight: 700;
    }

    .profile button {
        width: 175px;
        width: 90%;
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

    .profile-picture {
        height: 175px;
        width: 175px;
        border-radius: 50%;
        border: 4px solid var(--text-primary);
        background-image: linear-gradient(45deg, var(--text-primary-gradient), var(--background-primary-gradient)), url(../../assets/images/ben.jpg);
        background-position: center center;
        background-size: cover;
        box-shadow: var(--box-shadow);
    }

    .profile-socials {
        height: 40px;
    }

    @media (max-width: 1400px) {
        .profile-picture {
            width: 150px;
            height: 150px;
            margin-top: 15%;
        }
    }
    @media (max-width: 1250px) {
        .profile-picture {
            margin-top: 10%;
    }

}
</style>