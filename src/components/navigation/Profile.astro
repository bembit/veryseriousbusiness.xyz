<style>
    .profile {
        background-color: var(--background-minimal);
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }

    .profile div:first-of-type {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .profile h2 {
        margin-top: 1rem;
        text-align: center;
        min-width: 175px;
        font-weight: 900;
        color: var(--text-secondary);
    }

    .profile p {
        display: inline-block;
        /* background-color: var(--background-minimal); */
        text-align: left;
        color: var(--text-primary);
        font-size: 1.25rem;
        font-weight: 700;
        /* width: 90%; */
        padding: 1rem 0rem;
    }

    .profile p > a {
        color: var(--text-secondary);
        text-decoration: underline;
        font-weight: 700;
        margin-left: 10px;
    }

    .profile-picture {
        position: relative;
        height: 175px;
        width: 175px;
        border-radius: 50%;
        /* not sure */
        border: 4px solid var(--text-primary);
        background-image: linear-gradient(45deg, var(--text-primary-gradient), var(--background-primary-gradient)), url(../../assets/images/me.jpg);
        background-position: center center;
        background-size: cover;
        box-shadow: var(--box-shadow);
        margin-top: 25px;
    }

    .profile-socials {
        margin-top: 1rem;
        display: flex;
        gap: 10px;
        height: 40px;
        font-weight: 900;
        text-decoration: underline;
        color: var(--tertiary);
    }

    @media (max-width: 1400px) {
        .profile-picture {
            width: 150px;
            height: 150px;
            margin-top: 15%;
        }
        .profile {
            width: 90%;
        }
    }
    @media (max-width: 1250px) {
        .profile-picture {
            margin-top: 10%;
        }

    }
    @media (max-width: 950px) {
        .profile {
            /* margin-left: 25px; */
            margin-right: 25px;
            width: 100%;
            margin-top: 0;
            flex-direction: row;
            justify-content: space-between;
            button {
                display: none;
            }
        }
        .profile h2 {
            margin-top: 0;
            margin-left: 20px;
        }
        .profile div:first-of-type {
            flex-direction: row;
        }
        .profile p {
                display: none;
        }
        .profile-picture {
            margin-top: 0;
            height: 45px;
            width: 45px;
            border: 2px solid var(--text-primary);
        }
        .profile-socials {
            margin-top: 0;
            height: auto;
        }
    }
    @media (max-width: 500px) {
        .profile {
            margin-left: 0;
            margin-right: 0;
            padding: 5px 5px;
        }
        .profile h2 {
            min-width: fit-content;
            font-size: 1.8rem;
        }
        .profile-socials {
            font-size: 1.2rem;
        }
    }
    @media (max-width: 350px) {
        .profile div:first-of-type .profile-picture {
            display: none;
        }
        .profile h2 {
            margin-left: 0;
        }
    }
    @media (max-height: 700px) {
        .profile {
            background-color: inherit;
        }
    }

</style>
