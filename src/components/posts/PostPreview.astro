---
import { getCollection } from 'astro:content';

const allPosts = await getCollection('posts');

---

<h2 class="typography-title"><span>/</span>previews</h2>

{allPosts.map(post => (

    <a class="post-preview" href={`/posts/${post.slug}`} title={post.data.title}>
        <h1>{post.data.title}</h1>
        {/* <div class="tags">
            {post.data.tags.map((tag) => <span class="tag">{tag}</span>)}
        </div> */}
        <p>{post.data.description}</p>
        <span>{post.data.pubDate.toString().slice(0,10)}</span>
        <button>Continue reading</button>
    </a>

))}

<style>
    .typography-title {
        /* transform: translateY(-30%); */
        display: flex;
        flex-grow: 1;
        font-weight: 900;
        font-size: 10vw;
        /* letter-spacing: -5px; */
        text-transform: lowercase;
        justify-content: center;
        color: var(--tertiary);
        user-select: none;
        span {
            /* color: var(--text-secondary); */
            transform: translateY(10%);
            z-index: -1;
        }
    }
    .post-preview {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        width: 100%;
        padding: 2rem 3rem;
        background-color: #00000008; 
        transition: all .2s ease-in-out;
        border-left: 2px solid transparent;
    }
    .post-preview:hover {
        background-color: rgba(0, 0, 0, 0.086);
        border-left: 2px solid var(--transparent-white);
    }
    .post-preview h1 {
        font-size: 3rem;
        font-weight: 900;
        color: var(--text-secondary);
        text-transform: capitalize;
    }
    .post-preview p {
        font-size: 1.6rem;
        color: var(--text-primary);
    }
    .post-preview span {
        font-size: 1.2rem;
        color: var(--text-secondary);
    }
    .post-preview button {
        font-size: 1.2rem;
        padding: .75rem 2rem;
        background-color: var(--text-primary);
        color: var(--text-secondary);
        /* border-radius: var(--border-small); */
        border: none;
        width: fit-content;
    }
    .post-preview:not(:last-of-type) {
        margin-bottom: 3rem;
    }
</style>