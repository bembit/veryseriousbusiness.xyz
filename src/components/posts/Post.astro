---
const { post } = Astro.props;
---

<a class="post-preview" href={`/posts/${post.slug}`} title={post.data.title}>
    <h1>{post.data.title}</h1>
    <div class="preview-tags">
        {post.data.tags.map((tag) => <span class="tag">{tag}</span>)}
    </div>
    <span>{post.data.pubDate.toString().slice(0,10)}</span>
    <!-- <span>Est. Request size: {post.data.contentSize}. including {post.data.assetCount.images} images and {post.data.assetCount.videos} video(s).</span> -->
    <span>Est. Request size: {post.data.contentSize}.</span>
    <p>{post.data.description}</p>
    <button aria-label="continue reading">Continue reading</button>
</a>

<style>
    .post-preview {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 100%;
        padding: 1.5rem 2rem;
        background-color: var(--background-minimal);
        transition: all .2s ease-in-out;
    }
    .preview-tags {
        display: flex;
        gap: 1rem;
    }
    span.tag {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--text-secondary);
        background-color: var(--transparent-white);
        padding: .5rem 1rem;
    }
    .post-preview:hover {
        background-color: rgba(0, 0, 0, 0.086);
    }
    .post-preview h1 {
        font-size: 3rem;
        font-weight: 900;
        color: var(--text-secondary);
    }
    .post-preview p {
        font-size: 1.6rem;
        color: var(--text-primary);
    }
    .post-preview span:not(.arrow) {
        font-size: 1.2rem;
        color: var(--text-secondary);
    }
    .post-preview button {
        font-size: 1.2rem;
        padding: .75rem 2rem;
        background-color: var(--text-primary);
        color: var(--text-secondary);
        border: none;
        width: fit-content;
    }
    .post-preview:not(:last-of-type) {
        margin-bottom: 3rem;
    }
    @media (max-width: 500px) {
        .post-preview {
            padding: 0rem .5rem;
        }
        .post-preview h1 {
            padding: 5px 5px;
            font-size: 2.5rem;
        }
    }
    @media (max-width: 350px) {
        .post-preview h1 {
            font-size: 2rem;
        }
    }

</style>