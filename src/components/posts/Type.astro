---
const { routeTitle, typeTitle } = Astro.props;
---

<h3 class="typography-route">/{routeTitle}</h3>
<h2 class="typography-title"><span>/</span>{typeTitle}</h2>

<style>
    .typography-title {
        /* transform: translateY(-30%); */
        display: flex;
        width: 100%;
        font-weight: 900;
        font-size: 10vw;
        /* letter-spacing: -5px; */
        text-transform: lowercase;
        /* justify-content: center; */
        color: var(--tertiary);
        user-select: none;
        span {
            /* color: var(--text-secondary); */
            transform: translateY(10%);
            z-index: -1;
        }
    }
    .typography-route {
        display: flex;
        width: 100%;    
        font-weight: 900;
        font-size: 3vw;
        text-transform: lowercase;
        color: var(--text-secondary);
        user-select: none;
        transform: translateY(155%);
    }
    
    @media (max-width: 1250px) {
        .typography-title {
            font-size: 11vw;
        }
    }
    @media (max-width: 1100px) {
        .typography-title {
            font-size: 15vw;
        }
    }
    @media (max-width: 950px) {
        .typography-title {
            font-size: 20vw;
        }
    }
    @media (max-width: 650px) {
        .typography-title {
            font-size: 18vw;
        }
    }
    @media (max-width: 500px) {
        .typography-title {
            font-size: 20vw;
        }
    }
</style>